<view class="v">
  <view class="v1">
    <van-cell-group>
      <van-field value="{{ username }}" required clearable label="用户名" icon="question-o" placeholder="请输入用户名"
        bind:input="bindKeyInput" />

      <van-field value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}"
        bind:input="bindKeyInputpaw" />
    </van-cell-group>
  </view>
  <view class="v3">
    <button class="bt" bindtap="login" form-type="submit" style="width:20%">登录</button>
    <button class="wxbt" bindtap="getUserProfile" form-type="submit" style="width:20%">微信登录</button>
  </view>
  <van-dialog use-slot title="用户名或密码错误" show="{{ show }}">
  </van-dialog>
</view>