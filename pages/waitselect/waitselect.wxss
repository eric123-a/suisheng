/* pages/hxrecord/hxrecord.wxss */
page {
  height: 100%;
}

.nav {
  width: 100%;
  height: 9%;
}

.main {
  width: 100%;
  height: 91%;
}

.title {
  margin-top: 5%;
  width: 100%;
  height: 5%;
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 22px;
  display: flex;
  flex-direction: row;
}
.record-item{
  margin-top: 2%;
  width: 100%;
  height: 50px;
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}
.t {
  width: 50%;
  text-align: center;
}
.t2{
  width: 60%;
  height: 100%;
  text-align: center;
}

.record {
  width: 100%;
  height: 12%;
  background: #FCFCFC;
  border-radius: 7px;
}